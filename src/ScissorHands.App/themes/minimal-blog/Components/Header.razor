@namespace ScissorHands.Theme.MinimalBlog.Components.Header

<header class="site-header">
    <div class="site-header inner">
        <a href="/" class="site-title" title="@Site!.Title">
            <h1><img src="@($"/themes/{Theme!.Slug.TrimEnd('/')}/assets/images/icon.svg")" alt="ScissorHands icon" width="20" height="20" /> @Site!.Title</h1>
        </a>
        <nav class="site-nav" aria-label="Main">
            <a class="site-nav-link" href="/about">About</a>
            <a class="site-nav-link" href="/docs">Docs</a>
        </nav>
        <div class="header-actions">
            <button id="dark-mode-toggle" class="dark-mode-toggle" aria-label="Toggle dark mode">
                <img src="@($"/themes/{Theme!.Slug.TrimEnd('/')}/assets/images/sun-icon.svg")" alt="Light mode" class="sun-icon" width="24" height="24" />
                <img src="@($"/themes/{Theme!.Slug.TrimEnd('/')}/assets/images/moon-icon.svg")" alt="Dark mode" class="moon-icon" width="24" height="24" style="display: none;" />
            </button>
            <div class="dark-mode-toggle-github">
                <a href="https://github.com/getscissorhands/Scissorhands.NET" target="_blank"><img src="https://cdn.simpleicons.org/github/181717" alt="GitHub light mode" class="sun-icon-github" width="24" height="24" /></a>
                <a href="https://github.com/getscissorhands/Scissorhands.NET" target="_blank"><img src="https://cdn.simpleicons.org/github/FFFFFF" alt="GitHub dark mode" class="moon-icon-github" width="24" height="24" style="display: none;" /></a>
            </div>
        </div>
    </div>
</header>

@code {
    [Parameter]
    public SiteManifest Site { get; set; } = new();

    [Parameter]
    public ThemeManifest Theme { get; set; } = new();
}
