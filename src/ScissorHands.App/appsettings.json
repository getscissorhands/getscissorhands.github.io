{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Site": {
    "Title": "ScissorHands.NET",
    "Description": "A Blazor-based static site generator",
    "Locale": "en-US",
    "Author": "ScissorHands Team",
    "Theme": "minimal-blog",
    "BaseUrl": "/",
    "HeroImage": "/images/scissorhands-net.jpg",
    "IncludeDateInPostUrl": true,
    "Debug": false
  },

  "Plugins": [
    {
      "Name": "Google Analytics",
      "Options": {
        "MeasurementId": "G-XXXXXXXX"
      }
    },
    {
      "Name": "Open Graph",
      "Options": {
        "TwitterSiteId": "@getscissorhands"
      }
    }
  ]
}