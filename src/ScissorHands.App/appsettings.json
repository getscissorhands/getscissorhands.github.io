{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Site": {
    "Title": "ScissorHands.NET",
    "Description": "A Blazor-based static site generator",
    "Author": "ScissorHands Team",
    "Theme": "minimal-blog",
    "ContentRoot": "contents",
    "Output": "dist",
    "PreviewOutput": "preview",
    "BaseUrl": "/",
    "IncludeDateInPostUrl": true,
    "Debug": false
  },

  "Plugins": [
    {
      "Name": "Google Analytics",
      "Options": {
        "MeasurementId": "G-XXXXXXXX"
      }
    }
  ]
}